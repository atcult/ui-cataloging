{
  "name": "@folio/marccat",
  "appName": "MARCcat",
  "version": "1.0.0",
  "company": "@Cult",
  "description": "MARCcat Cataloging Module",
  "repository": "https://github.com/atcult/ui-marccat",
  "publishConfig": {
    "repository": "@folio-org/ui-marccat",
    "registry": "https://repository.folio.org/repository/npm-folio/"
  },
  "main": "src/index.js",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://issues.folio.org/projects/MARCCATUI",
    "email": "info@atcult.it"
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "contributors": [
    {
      "name": "Christian Chiama",
      "email": "christian.chiama@atcult.it",
      "url": "http://www.atcult.it",
      "username": "cchiama"
    },
    {
      "name": "Matteo Pascucci",
      "email": "matteo.pascucci@atcult.it",
      "url": "http://www.atcult.it"
    },
    {
      "name": "Alice Guercio",
      "email": "alice.guercio@atcult.it",
      "url": "http://www.atcult.it"
    }
  ],
  "scripts": {
    "start": "stripes serve config/stripes.config.js",
    "build": "stripes build --output dist/ --sourcemap",
    "build:analizer": "stripes build config/stripes.config.js ./dist/analyze/ui-marccat-analyze --analyze --sourcemap",
    "test": "(cd test/ui-testing; yarn test-module -- -o --run=ui-marccat --host=localhost)",
    "lint": "yarn eslint && yarn stylelint",
    "lint-i18n": ". ./script/sh/i18n-lint.sh",
    "flow:gen": "lint-staged",
    "eslint": "eslint --fix ./",
    "stylelint": "stylelint --fix \"src/**/*.css\"",
    "flow": "flow src/",
    "version": "yarn changelog && git add CHANGELOG.md",
    "gen:authors": ". ./script/sh/authors.sh",
    "clean": "node ./script/js/clean.js",
    "release": "node script/ci/release.js"
  },
  "devDependencies": {
    "@folio/eslint-config-stripes": "^1.1.0",
    "babel-eslint": "^8.2.5",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "eslint": "^4.8.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-react": "7.10.0",
    "lint-staged": "^7.2.0",
    "pre-commit": "^1.2.2",
    "semver": "5.x.x"
  },
  "dependencies": {
    "@folio/stripes-components": "^3.0.4000450",
    "@folio/stripes-smart-components": "^1.4.23000213",
    "flow": "^0.2.3",
    "react-intl": "^2.4.0",
    "redux-form": "^7.4.2",
    "semafor": "0.0.1",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "peerDependencies": {
    "@folio/stripes-core": "*",
    "react": "*"
  },
  "resolutions": {
    "**/domelementtype": "1.3.0",
    "**/isarray": "2.0.4",
    "**/warning": "3.0.0"
  },
  "pre-commit": {
    "run": "lint, stylelint"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "stripes": {
    "type": "app",
    "displayName": "MARCcat",
    "route": "/marccat",
    "defaultPopoverSize": "400px",
    "defaultPreviewWidth": "40%",
    "helpPage": "https://wiki.folio.org/pages/",
    "hasSettings": true,
    "okapiInterfaces": {
      "cataloging": "1.0.0"
    },
    "icons": [
      {
        "name": "app",
        "alt": "Create, view and manage marccat",
        "title": "MARCcat"
      }
    ],
    "permissionSets": [
      {
        "permissionName": "module.marccat.enabled",
        "displayName": "UI: ui-marccat module is enabled",
        "visible": true
      },
      {
        "permissionName": "settings.marccat.enabled",
        "displayName": "Settings (marccat): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": true
      }
    ]
  }
}
